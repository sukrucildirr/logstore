{
	"name": "@concertodao/logstore-validator",
	"version": "0.0.1",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "GPL-3.0",
	"description": "Concerto Log Store Validator Node",
	"private": false,
	"scripts": {
		"build": "rimraf dist && tsc",
		"build:binaries": "yarn build && rimraf out && pkg --no-bytecode --public-packages '*' --output out/kyve package.json && node ../../common/core/dist/src/scripts/checksum.js",
		"start": "node ./dist/src/index.js",
		"format": "prettier --write .",
		"start:fresh": "npm-run-all -s build start",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts"
	},
	"bin": "./dist/src/index.js",
	"pkg": {
		"scripts": "./dist/src/index.js",
		"assets": "./node_modules/@kyve/sdk/dist/proto/*",
		"targets": [
			"latest-linux-x64",
			"latest-macos-x64"
		],
		"outputPath": "out"
	},
	"prettier": {
		"singleQuote": true
	},
	"dependencies": {
		"@concertodao/logstore-contracts": "workspace:../contracts",
		"@kyvejs/protocol": "1.0.0-beta.8",
		"@sentry/node": "^7.13.0",
		"@sentry/tracing": "^7.13.0",
		"@streamr/config": "^2.5.8",
		"chokidar": "^3.5.3",
		"classic-level": "^1.2.0",
		"dotenv": "^16.0.3",
		"ethers": "^6.0.3",
		"redstone-api": "^0.4.11",
		"streamr-client": "^7.3.0",
		"uint8arrays": "^4.0.3"
	},
	"devDependencies": {
		"@types/node": "^18.7.18",
		"@types/node-fetch": "^2.6.2",
		"@types/pino": "^7.0.5",
		"@types/websocket": "^1.0.5",
		"@types/ws": "^8.5.3",
		"del-cli": "^5.0.0",
		"eslint": "^8.34.0",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.6.0",
		"prettier": "^2.6.2",
		"resolve-tspaths": "^0.8.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"tslib": "^2.5.0",
		"typescript": "^4.6.4"
	}
}
