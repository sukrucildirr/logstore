{
	"name": "@concertodao/logstore-validator",
	"version": "0.0.1",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "GPL-3.0",
	"description": "Concerto Log Store Validator Node",
	"private": false,
	"scripts": {
		"build": "del dist && tsc",
		"bin": "del out && pkg --no-bytecode --public-packages '*' --output out/logstore package.json && node ../../common/core/dist/src/scripts/checksum.js",
		"build:binaries": "run-s build bin",
		"start": "node ./dist/src/index.js",
		"format": "prettier --write .",
		"start:fresh": "npm-run-all -s build start",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts",
		"test": "dotenv -e .env jest --",
		"run-script": "dotenv -e .env ts-node"
	},
	"bin": "./dist/src/index.js",
	"pkg": {
		"scripts": "./dist/src/index.js",
		"assets": "./node_modules/@kyve/sdk/dist/proto/*",
		"targets": [
			"latest-linux-x64",
			"latest-macos-x64"
		],
		"outputPath": "out"
	},
	"prettier": {
		"singleQuote": true
	},
	"dependencies": {
		"@concertodao/logstore-client": "workspace:^0.0.1",
		"@concertodao/logstore-contracts": "workspace:^0.0.1",
		"@concertodao/logstore-shared": "workspace:^0.0.1",
		"@ethersproject/contract": "6.0.0-beta.1",
		"@ethersproject/providers": "^5.7.2",
		"@ethersproject/wallet": "^5.7.0",
		"@kyvejs/protocol": "1.0.0-beta.13",
		"@sentry/node": "^7.13.0",
		"@sentry/tracing": "^7.13.0",
		"@streamr/config": "^2.5.8",
		"arweave": "^1.13.3",
		"camadb": "^2.0.0",
		"chokidar": "^3.5.3",
		"classic-level": "^1.2.0",
		"commander": "^10.0.0",
		"ethers": "^6.2.3",
		"lmdb": "^2.7.11",
		"lodash": "^4.17.21",
		"memory-level": "^1.0.0",
		"redstone-api": "^0.4.11",
		"reflect-metadata": "^0.1.13",
		"streamr-client": "^8.1"
	},
	"devDependencies": {
		"@ethersproject/bignumber": "^5.7.0",
		"@kyvejs/sdk": "1.0.0-beta.10",
		"@streamr/test-utils": "^8.0.2",
		"@streamr/utils": "^8.1.0",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.7.18",
		"@types/node-fetch": "^2.6.2",
		"@types/pino": "^7.0.5",
		"@types/websocket": "^1.0.5",
		"@types/ws": "^8.5.3",
		"cross-env": "^7.0.3",
		"del-cli": "^5.0.0",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.34.0",
		"jest": "^29.4.3",
		"jest-extended": "^3.2.4",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.6.0",
		"prettier": "^2.6.2",
		"prom-client": "^14.2.0",
		"resolve-tspaths": "^0.8.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"tslib": "^2.5.0",
		"tslog": "^3.3.4",
		"typescript": "^4.6.4",
		"uint8arrays": "^3"
	}
}
