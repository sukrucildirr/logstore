{
	"name": "@concertodao/logstore-validator",
	"version": "0.0.1",
	"author": "Ryan Soury <ryan@usher.so>",
	"license": "GPL-3.0",
	"description": "Concerto Log Store Validator Node",
	"private": false,
	"scripts": {
		"build": "del dist && tsc",
		"start": "node ./dist/src/index.js",
		"format": "prettier --write .",
		"start:fresh": "npm-run-all -s build start",
		"ts": "tsc --noEmit",
		"lint": "eslint -c ./.eslintrc ./src/**/*.ts",
		"test": "dotenv -e .env jest --",
		"run-script": "dotenv -e .env ts-node"
	},
	"main": "./dist/src/index.js",
	"bin": "./dist/src/index.js",
	"pkg": {
		"scripts": "./dist/src/index.js",
		"assets": [
			"./node_modules/streamr-client/**/*"
		],
		"targets": [
			"latest-linux-x64",
			"latest-linux-arm64",
			"latest-macos-x64"
		],
		"outputPath": "out"
	},
	"prettier": {
		"singleQuote": true
	},
	"dependencies": {
		"@concertodao/logstore-client": "workspace:^0.0.1",
		"@concertodao/logstore-contracts": "workspace:^0.0.1",
		"@concertodao/logstore-protocol": "workspace:^0.0.1",
		"@concertodao/logstore-shared": "workspace:^0.0.1",
		"@ethersproject/bignumber": "^5.7.0",
		"@ethersproject/providers": "^5.7.2",
		"@ethersproject/wallet": "^5.7.0",
		"@kyvejs/protocol": "1.0.0-beta.13",
		"@kyvejs/sdk": "1.0.0-beta.14",
		"@streamr/network-node": "^8.5.0",
		"arweave": "^1.13.7",
		"bigint-buffer": "^1.1.5",
		"commander": "^10.0.0",
		"ethers": "^6.2.3",
		"ipfs-utils": "^9.0.14",
		"lmdb": "^2.7.11",
		"lodash": "^4.17.21",
		"redstone-api": "^0.4.11",
		"streamr-client": "^8.1"
	},
	"devDependencies": {
		"@mapbox/node-pre-gyp": "^1.0.10",
		"@streamr/test-utils": "^8.0.2",
		"@streamr/utils": "^8.1.0",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.57",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.7.18",
		"@vercel/ncc": "0.34",
		"aws-sdk": "^2.1377.0",
		"del-cli": "^5.0.0",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.2.1",
		"esbuild": "^0.17.19",
		"esbuild-node-externals": "^1.7.0",
		"eslint": "^8.34.0",
		"jest": "^29.4.3",
		"jest-extended": "^3.2.4",
		"mock-aws-s3": "^4.0.2",
		"nock": "^13.3.1",
		"node-datachannel": "^0.4.2",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.6.0",
		"prettier": "^2.6.2",
		"prom-client": "^14.2.0",
		"resolve-tspaths": "^0.8.0",
		"sqlite3": "^5.1.6",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"tslib": "^2.5.0",
		"tslog": "^3.3.4",
		"tsup": "^6.7.0",
		"typescript": "^4.6.4",
		"uint8arrays": "^3"
	}
}
